{
   "name": "vacuum-min-card",
   "version": "1.0.0",
   "type": "module",
   "description": "Minimal card to monitor vacuum cleaner for Home Assistant Lovelace UI",
   "main": "dist/vacuum-card-min.js",
   "keywords": [
      "home-assistant",
      "homeassistant",
      "hass",
      "automation",
      "lovelace",
      "custom-cards-min",
      "vacuum"
   ],
   "author": "Adrien Parasote <adrien.parasote@gmail.com>",
   "license": "GNU",
   "scripts": {
      "start": "rollup -c --watch",
      "lint": "eslint . --ext .ts",
      "lint:fix": "eslint . --ext .ts --fix",
      "format": "prettier --config .prettierrc 'src/**/*.ts' --write",
      "build": "rollup -c",
      "test": "npm run lint && npm run build"
   },
   "devDependencies": {
      "@types/node": "20.14.11",
      "@typescript-eslint/eslint-plugin": "7.16.1",
      "@typescript-eslint/parser": "7.16.1",
      "eslint": "8.57.0",
      "eslint-config-prettier": "9.1.0",
      "eslint-plugin-prettier": "5.2.1",
      "prettier": "3.3.3",
      "typescript": "5.5.3"
   },
   "engines": {
      "node": "20.15.1"
   }
}
